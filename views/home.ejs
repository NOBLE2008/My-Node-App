<%- include("header.ejs") %>
<form action="/newpost" method="get" style="display: flex; justify-content: center; padding-left: 30px; padding-right: 30px;">
    <input type="submit" value="Make New Post" class="btn btn-primary" style="width: 100%; max-width: 1200px;">
</form>
<div style="display: flex; width: 100vw; justify-content: center; margin-top: 10px;"><div class="postview">
<% if(posts == []){ %>
    <% } else{%>
        <% for(var i = posts.length-1; i>=0; i--){ %>

            <div class="card" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title" id="post<%= i %>"><%= posts[i].title %></h5>
                  <% if (posts[i].content.length >= 150) { %>
                    <p class="card-text"><%= posts[i].content.slice(0, 150) + "..."%></p>
                  <% } else{%>
                  <p class="card-text"><%= posts[i].content.slice(0, 150) %></p>
                  <% } %>
                  <form action="/viewpost" method="post">

                    <input name="postinput" value="<%= i %>" style="display: none;">
                    <input type="submit" value="View Post" class="btn btn-primary">
                </form>
                </div>
              </div>

            <% } %>
        <% } %>
    </div>
</div>
<%- include("footer.ejs") %>
    
